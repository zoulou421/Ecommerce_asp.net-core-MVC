@model OnlineShop.Models.TagNames
@{
    ViewData["Title"] = "Details";
}

<form method="post">
    <div class="border p-3 mt-4">
       <div class="row pb-2">
            <h2 class="text-info">Tag Name Details</h2>
            <hr />
       </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
          <label asp-for="TagName"></label>
          <input asp-for="TagName" readonly="readonly" class="form-control" />
          <span asp-validation-for="TagName" class="text-danger"></span>
        </div>

           <a asp-action= "Edit" asp-route-id="@Model.Id" class="btn btn-primary" >Edit </a>
           <a asp-action= "Index" class="btn btn-success" >Back to List </a>
          @* <input type="submit" class="btn btn-success " value="Back to List" />*@
    </div>

</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}