@using OnlineShop.Models;
@model IEnumerable<TagNames>

@{
    ViewData["Title"] = "Index";
}

<br /><br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Tag Name List </h2>
    </div>
    <div class="col-6 text-end">
        <a asp-action="Create" class="btn btn-info"> &nbsp; New Tag Name</a>
    </div>
</div>
<br />

<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(c=>c.TagName)
            </th>
            <th></th>
            <th></th>
        </tr>
        @foreach(var item in Model)
        {
           <tr>
               <td>@item.TagName</td>
               <!--td>Edit |Details | Delete</td-->
               <td>
                   <partial name="_ButtonPartialTname" model="@item.Id" />
               </td>
           </tr> 
        }
    </table>

</div>

