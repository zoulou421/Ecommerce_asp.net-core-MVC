@using OnlineShop.Models
@model List<Products>

@{
    ViewData["Title"] = "Cart";
}

<h1>Your Cart</h1>
<br />
<div class="row">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Price</th>
                <th>Product Type</th>
                <th>Color</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><img src="@item.Image" alt="Card Image" class="card-img-top" style="height:300px;" /></td>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.ProductTypes.ProductType</td>
                    <td>@item.ProductColor</td>
                    <td>
                        <a asp-action="Remove" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-danger">
                           <i class="fas fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="row">
    <div class="col-6">
        <a asp-action="Index" asp-controller="Home" class="btn btn-success" asp-area="Customer">Back To Home</a>
    </div>
    <div class="col-text-right">
        <h3>Total Amount:</h3>
        <h3>Grant Total: @Model.Sum(c=>c.Price) </h3>
         @*<a asp-action="Checkout" asp-controller="Order" class="btn btn-info" asp-area="Customer">Process to Checkout</a>*@
          <a class="nav-link text-dark btn btn-info" asp-area="Customer" asp-controller="Order" asp-action="Checkout" >Process to Checkout</a>
    </div>
</div>

